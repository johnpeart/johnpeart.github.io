  "license": "None",
  "description": "John Peart's personal website",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "dotenv": "^16.4.5",
    "eleventy-plugin-redirects": "^1.0.0",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.2.0",
    "markdown-it-footnote": "^4.0.0",
    "sass": "^1.77.8"
  }
}
